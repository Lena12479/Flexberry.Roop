<h3 class="ui header">{{t "forms.i-i-s-roop-т-н-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерТН
      class=(if (v-get validationModel "номерТН" "isInvalid") "error")
      label=(t "forms.i-i-s-roop-т-н-e.номерТН-caption")
      data-test-i-i-s-roop-т-н-e-номерТН=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерТН" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.поставщик
      class=(if (v-get validationModel "поставщик" "isInvalid") "error")
      label=(t "forms.i-i-s-roop-т-н-e.поставщик-caption")
      data-test-i-i-s-roop-т-н-e-поставщик=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "поставщик" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерТС
      class=(if (v-get validationModel "номерТС" "isInvalid") "error")
      label=(t "forms.i-i-s-roop-т-н-e.номерТС-caption")
      data-test-i-i-s-roop-т-н-e-номерТС=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерТС" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.материал
      class=(if (v-get validationModel "материал" "isInvalid") "error")
      label=(t "forms.i-i-s-roop-т-н-e.материал-caption")
      data-test-i-i-s-roop-т-н-e-материал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "материал" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колво
      class=(if (v-get validationModel "колво" "isInvalid") "error")
      label=(t "forms.i-i-s-roop-т-н-e.колво-caption")
      data-test-i-i-s-roop-т-н-e-колво=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "колво" "message")}}
  </div>
</form>
